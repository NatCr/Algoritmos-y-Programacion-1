#include <iostream>
#include <conio.h>
using namespace std;

int repetirDigitoEliminadoeliminarDigito(int n,int dig)
{ int d,newnro=0;
while(n>0)
  {d=n%10;
   if(d==dig)   
   {newnro=newnro*10+d;}
   n=n/10;
  }
return(newnro);
}

void main()
{ int nro,dig;
cout<<"Introducir un numero natural: ";
cin>>nro;
cout<<"Introducir un numero natural de un solo digito: ";
cin>>dig;
cout<<"El numero sin el digito es: "<<repetirDigitoEliminadoeliminarDigito(nro, dig);
getch();
}

