//FUNCIONES:

int sumar(int x, int y){
	int r;
	r = x + y;
	return(r);
}

int multiplicar(int x, int y){
	int r = 0, i;
	for (i = 1; i <= y; i++){
		r = r + x;
	}
	return(r);
}

int division(int x, int y){
	int r = 0;
	while (x>0){
		x = x - y;
		r++;
	}
	return(r);
}

int factorial(int x){
	int r = 1, i;
	for (i = 1; i <= x; i++){
		r = r*i;
	}
	return(r);
}


